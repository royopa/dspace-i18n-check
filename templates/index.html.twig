{% extends "layout.html.twig" %}

{% block content %}

<div class="row">
    <div class="col-lg-12 text-center">
        <h1>DSpace i18n checker translation message keys</h1>
        <p class="lead">Select the languages messages files to check missings keys</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <fieldset class="lead">
            <div class="form-group">
                {{ form_label(form.master) }}
            <div class="col-sm-3">
                {{ form_widget(form.master) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.toCheck) }}
            <div class="col-sm-3">
                {{ form_widget(form.toCheck) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3"></div>
            <div class="col-sm-3">
                {{ form_widget(form.Check) }}
            </div>
        </div>

        <fieldset>
            <div>
                {{ form_errors(form) }}
            </div>
        </fieldset>
            {{ form_end(form) }}
        </fieldset>
    </div>
</div>

<div class="row">
    <div class="col-lg-10 text-right small">
        {% if last_update_message %}
            <p>
                Last update source in message.xml file:
                <b>{{ last_update_message.date }}</b>
            </p>
        {% endif %}
        {% if last_update_translations %}
            <p>
                Last update translations in messages_XX.xml files:
                <b>{{ last_update_translations.date }}</b>
            </p>
        {% endif %}
    </div>
</div>
{% endblock %}
