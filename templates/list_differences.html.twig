{% extends "layout.html.twig" %}

{% block content %}

<div class="row">
    <div class="col-lg-12 text-center">
        <h1>DSpace i18n checker translation message keys</h1>
        <p>&nbsp;</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <!-- Default panel contents -->
            <div class="panel-heading">Keys in master but not in translation file</div>
            <!-- Table -->
            <table class="table table-condensed table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in checker.inMasterNotInToCheck %}
                        {% if row != '' and row != '#' %}
                        <tr>
                            <td>{{ row }}</td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <!-- Default panel contents -->
            <div class="panel-heading">Keys in translation file but not in master</div>
            <!-- Table -->
            <table class="table table-condensed table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in checker.inToCheckNotInMaster %}
                        {% if row != '' and row != '#' %}
                        <tr>
                            <td>{{ row }}</td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 text-right small">
        {% if last_update_message %}
            <p>
                Last update source in message.xml file:
                <b>{{ last_update_message.date }}</b>
            </p>
        {% endif %}
        {% if last_update_translations %}
            <p>
                Last update translations in messages_XX.xml files:
                <b>{{ last_update_translations.date }}</b>
            </p>
        {% endif %}
    </div>
</div>
{% endblock %}
